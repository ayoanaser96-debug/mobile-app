{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flutter App (Chrome)",
      "type": "shell",
      "command": "${workspaceFolder}/run-app-chrome.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Flutter App (Emulator)",
      "type": "shell",
      "command": "${workspaceFolder}/run-app.sh",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "cd ${workspaceFolder}/backend && npm run start:dev",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}

